/* pages/classification/answer/index.wxss */
.answer{
  position: relative;
}
.imgBg{
  position: absolute;
  top: 0;
  left: 0;
  z-index: -9999999;
}
.listRadiusd{
  height: 50rpx;
}
.listRadius{
  width: 94%;
  margin: 0 auto;
  display: flex;
  /* justify-content: space-around; */
  flex-wrap:wrap;
}
.listRadius > .list{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #d9ecab;
  margin:5rpx 10rpx;
}
.answer-list{
  display: none;
  width: 90%;
  margin: 0 auto;
  background: #fff;
  color: #444;
  font-size: 32rpx;
  border-radius: 6px;
  margin-top: 60rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.answer-list > .list > .title{
  font-size: 37rpx;
}
.answer-list > .list >.rad  .li{
  margin-top: 20rpx;
}
.radio{
  display: block;
  margin-bottom: 20rpx;
  background: #f2f3f7;
  border-radius: 15px;
  padding: 10rpx;
  box-sizing: border-box;
  line-height: 60rpx;
}

radio .wx-radio-input{
 
   padding:0 20rpx;
   box-sizing: border-box;
   /* background: red; */
}
.btn-next{
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: #febb08;
  margin: 30rpx auto;
  border-radius: 30px;
  
}
.img{
  width: 250rpx;
  height: 250rpx;
  margin: 30rpx auto;
  border-radius: 50%;
  overflow: hidden;
}
.img image{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.showList{
  display: block;
	animation: hideIndex 0.3s;
	-moz-animation: hideIndex  0.3s; /* Firefox */
	-webkit-animation: hideIndex  0.3s; /* Safari and Chrome */
	-o-animation: hideIndex  0.3s; /* Opera */
}
@keyframes hideIndex{
	0%{ opacity: 0; transform: translate(800px, 0) }
	100%{opacity: 1; transform: translate(0, 0) }
}
.correct{
  background:#97c73f;
  color: #fff;
}
.error{
  background: #febb08;
    color: #fff;
}







