// pages/md/mdlist/index.js
var t = getApp(), core = t.requirejs("core");
Page({

  /**
   * 页面的初始数据
   */
  data: {
    markers: [],
    curindex:1,//1门店选择 2常用收藏
    page:0,
    isFover:[]
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    this.getLocation() //获取当前经纬度
    this.setData({
      mdId: t.globalData.mdid
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
   
    
  },
  getLocation(){
    let that = this;
    wx.getLocation({//获取当前经纬度
      type: 'wgs84',
      success: function (res) {
        that.setData({
          latitude: res.latitude,
          longitude: res.longitude,
        })
        that.getList()
      }
    })
  },
  onIndexcur(event){
    let that = this;
    let index = event.currentTarget.dataset.index;
    index == 2 ? that.getList() : ''
    that.setData({
      curindex: index
    })
  },
  onMdid(e){
    let that = this;
    let id = e.currentTarget.dataset.id;
    wx.showModal({
      title: '温馨提示',
      content: '您当前所在位置距该门店较远，确认切换到该门店吗？',
      showCancel: true,//是否显示取消按钮
      cancelText: "否",//默认是“取消”
      confirmText: "是",//默认是“确定”
      success: function (res) {
        if (res.cancel) {
          //点击取消,默认隐藏弹框
          console.log("点击取消")
        } else {
          //点击确定
          t.globalData.mdid = id;
          wx.switchTab({
            url: '/pages/index/index',
          })
        }
      },
      fail: function (res) { },//接口调用失败的回调函数
      complete: function (res) { },//接口调用结束的回调函数（调用成功、失败都会执行）
    })


  },
  getList(){
    let that = this;
    let markers = []
    let arrStr = [];
    let isFover = []
    core.post("merch.list.main",{
      page: that.data.page,
      lat: that.data.latitude,
      lng: that.data.longitude,
    },function(res){
      if (res.error == 0){
        for (let item of res.list){
          // console.log(item)
          let lats = Number(item.lat);
          let lons = Number(item.lng);
          arrStr = { iconPath: item.logo, id: item.id, title: item.merchname, latitude: lats, longitude: lons, width: 50, height: 50}
          if (item.favorite == 1){isFover.push(item) }
          markers.push(arrStr)
        }
        let list1 = res.list[0]
        // console.log(res.list)
        that.setData({
          list:res.list, //列表
          list1:list1, // 列表第一个
          markers:markers, // 地图
          isFover: isFover,//收藏
        })
      }else{
        core.toast(res.message, 'none')
      }
    },true)
  },
  onPhone(event) {
    var tel = event.currentTarget.dataset.tel;
    wx.makePhoneCall({
      phoneNumber: tel
    })
  },
  onGuideTap: function (event) {
    var lat = Number(event.currentTarget.dataset.lat);
    var lon = Number(event.currentTarget.dataset.lng);
    var bankName = event.currentTarget.dataset.name;
    var address = event.currentTarget.dataset.address;
    // console.log(lat);
    // console.log(lon);
    wx.getLocation({//获取当前经纬度
      type: 'wgs84',   
      success: function (res) {
        wx.openLocation({
          latitude: lat,//要去的纬度-地址
          longitude: lon,//要去的经度-地址
          name: bankName,
          address: address
        })
      }
    })
  },
  onFavorite(event){
    let that = this;
    let favorite = event.currentTarget.dataset.favorite;
    let ids = event.currentTarget.dataset.id;
    let index = event.currentTarget.dataset.index;
    core.post("merch.favorite.toggle",{
      id: ids,
      isfavorite: favorite,
    },function(res){
      console.log(res)
      if (res.error == 0){
        // console.log(res)
        var isFavor = "list[" + index + "].favorite";
        that.setData({
          [isFavor]: favorite
        })
      }else{
        core.toast(res.message, 'none')
      }
    },true)
  },
  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})