.mdlist{
  width: 94%;
  margin: 0 auto;
  padding: 15rpx 0;
}
.mdlist .item{
  background: #fff;
  padding: 15rpx 0 15rpx;
  border-radius: 6px;
  box-sizing: border-box;
  margin-bottom: 25rpx;
}
.mdlist .item .top{
  display: flex;
  align-items: center;
  padding: 0 15rpx;
}
.mdlist .item .top .title{
  margin-right: 15rpx;
}
.mdlist .item .top .selectBtn{
  padding: 8rpx 15rpx;
  background: #fa6907;
  font-size: 30rpx;
  color: #fff;
  border-radius: 6px;
}
.mdlist .item .top .img{
  width: 65rpx;
  height: 65rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 50%;
 box-shadow: 1px 1px 8px 1px rgba(0,0,0,.2);
   /* align-self:flex-end; */
}
.modals{
  font-size: 28rpx;
  margin: 5rpx 0;
  color: #eee;
}
.mdlist .item .top .img image{
  width: 50rpx;
  height: 50rpx;
}
.mdlist .item .cententIco {
  display: flex;
   padding: 16rpx 15rpx;
   align-items: center;
}
.mdlist .item .cententIco .dataico{
  width: 30rpx;
  height: 30rpx;
}
.mdlist .item .cententIco .date{
  flex: 1;
  font-size: 30rpx;
  margin: 0 10rpx;
  color: #666;
}
.centent{
  padding: 10rpx 0;
}
.mdlist .item .cententIco .right{
  color: #666;
  font-size: 30rpx;
}
.mdlist .item .bottom{
  border-top: 1px solid #ccc;
   padding: 16rpx 15rpx;
   display: flex;
   align-items: center;
   color: #666;
}
.mdlist .item .bottom .title{
  font-size: 30rpx;
}
.mdlist .item .bottom .stare{
  color: #fa6907;
  font-size: 28rpx;
  flex: 1;
}
.mdlist .item .bottom .btns{
  padding: 10rpx 15rpx;
  border: 1px solid #ccc;
  margin:0 10rpx;
  border-radius: 6px;
  text-align: center;
  font-size: 28rpx;
}