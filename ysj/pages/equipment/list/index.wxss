/* pages/equipment/list/index.wxss */
.main{
width: 90%;
margin: 0 auto
}
page{
  background: #fff;
}
.search{
  width: 100%;
  margin: 30rpx auto 40rpx;
}
.search input {
  width: 100%;
  border: none;
  display: block;
  background: #f2f2f2;
  border-radius: 30px;
  text-align: center;
  padding: 10rpx;
  font-size: 32rpx;
}
.title{
  font-size: 34rpx;
}
.eqItem{
  margin-top: 30rpx;
}
.eqItem .list{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 2px 4px 5px 0px 
		rgba(225, 223, 223, 0.75);
	border-radius: 4px;
	border: solid 1px #eeeeee;
  padding: 50rpx 0 ;
}
.eqItem .list .line{
  width: 2px;
  height: 80rpx;
 background-color: #528921;
}
.eqItem .list .desc{
  margin-left: 30rpx;
  flex: 1
}
.eqItem .list .desc .title{
  font-size: 33rpx;
  margin-bottom: 5rpx;
}
.eqItem .list .desc .info{
  font-size: 31rpx;
  color: #a3a2a2;
}
.eqItem .list .det{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #bfbfbf;
  text-align: center;
  line-height: 50rpx;
  margin-right: 20rpx;
  color: #fff;
}
.position_flex{
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  line-height: 84rpx;
  background: #528921;
  border-radius: 50%;
  /* display: flex; */
  /* align-items: center; */
  text-align: center;
  font-size: 98rpx;
  font-weight: bold;
  justify-content: center;
  color: #fff;
  right: 10rpx;
  top: 80%;
}
.view_box{
  /* display: flex; */
  width: 100%;
  height: 100%;
  /* align-items: center; */
  /* justify-content: center; */
  margin: 200rpx auto 0;
  font-size: 32rpx;
  text-align: center;
  color: #666;
}
.view_box image{
  width: 250rpx;
}