.triangle_down:after {
    content: " ";
    display: inline-block;
    -webkit-transform: rotate(135deg);
    -ms-transform: rotate(135deg);
    transform: rotate(135deg);
    height: 0.4rem;
    width: 0.4rem;
    border-width: 1px 1px 0 0;
    border-color: #000;
    border-style: solid;
    position: relative;
    top: -5rpx;
    margin-left: 10rpx;
    display: none;
}